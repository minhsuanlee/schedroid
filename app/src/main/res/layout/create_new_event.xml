<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:gravity="center">
        <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        <TextView
                android:text="@string/add_a_new_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_create_title"
                android:textSize="30sp"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/title"
                    android:layout_width="71dp"
                    android:layout_height="44dp"
                    android:id="@+id/textView4"
                    android:textSize="24sp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edit_title"
                    android:hint="@string/please_enter_a_title"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/time"
                    android:layout_width="71dp"
                    android:layout_height="44dp"
                    android:id="@+id/textView3"
                    android:textSize="24sp"/>
            <EditText
                    android:layout_width="228dp"
                    android:layout_height="46dp"
                    android:inputType="time"
                    android:ems="10"
                    android:id="@+id/edit_time"
                    android:hint="@string/please_enter_the_time_xx_xx"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/location"
                    android:layout_width="115dp"
                    android:layout_height="43dp"
                    android:id="@+id/textView7"
                    android:textSize="24sp"/>
            <Button
                    android:text="@string/click_to_open_the_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_open_map"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/description"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/textView5"
                    android:textSize="24sp"/>
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edit_description"
                    android:hint="@string/please_enter_event_description"
                    android:textSize="18sp"
                    android:singleLine="false"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/is_it_a_daily_activity"
                    android:layout_width="219dp"
                    android:layout_height="37dp"
                    android:id="@+id/textView8"
                    android:textSize="24sp"/>
            <EditText
                    android:layout_width="91dp"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edit_Y_or_N"
                    android:hint="@string/enter_y_n"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="35dp"/>
        <Button
                android:text="@string/create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_ok"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|end">
            <Button
                    android:text="@string/go_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnGoBack"
                    android:background="@null"
                    android:textSize="15sp"/>
            <Space
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>