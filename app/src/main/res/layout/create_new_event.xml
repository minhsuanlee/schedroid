<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_title"
            android:hint="Please enter a title " android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_create_title"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"/>
    <EditText
            android:layout_width="259dp"
            android:layout_height="89dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_description"
            android:hint="Please enter event description" android:textSize="18sp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_open_map" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"/>
    <TextView
            android:text="Location : "
            android:layout_width="78dp"
            android:layout_height="43dp"
            android:id="@+id/textView7" android:textSize="18sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginEnd="28dp" app:layout_constraintEnd_toStartOf="@+id/btn_open_map"
            android:layout_marginRight="28dp"/>
    <TextView
            android:text="Description : "
            android:layout_width="106dp"
            android:layout_height="40dp"
            android:id="@+id/textView5" android:textSize="18sp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginEnd="12dp" app:layout_constraintEnd_toStartOf="@+id/btn_open_map"
            android:layout_marginRight="12dp"/>
    <TextView
            android:text="Title : "
            android:layout_width="71dp"
            android:layout_height="44dp"
            android:id="@+id/textView4" android:textSize="24sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/txt_create_title"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/edit_time"
            app:layout_constraintVertical_bias="0.047" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/edit_time" android:layout_marginRight="24dp"/>
    <TextView
            android:text="Add a New Event : "
            android:layout_width="246dp"
            android:layout_height="57dp"
            android:id="@+id/txt_create_title" android:textSize="30sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="68dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="68dp"/>
    <EditText
            android:layout_width="91dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_Y_or_N"
            android:hint="Enter Y/N" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_description" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_ok" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="@+id/edit_description" android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"/>
    <TextView
            android:text="Time : "
            android:layout_width="71dp"
            android:layout_height="44dp"
            android:id="@+id/textView3" android:textSize="24sp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginStart="36dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="36dp"/>
    <EditText
            android:layout_width="228dp"
            android:layout_height="46dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/edit_time"
            android:hint="Please enter the time(xx:xx)" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_title" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="28dp" android:layout_marginLeft="28dp"/>
    <Button
            android:text="Click to open the map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_open_map" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_time" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="88dp" android:layout_marginRight="88dp"/>
    <TextView
            android:text="Is it a daily activity?"
            android:layout_width="219dp"
            android:layout_height="37dp"
            android:id="@+id/textView8" android:textSize="24sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/edit_description"
            android:layout_marginStart="12dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="12dp"/>
    <Button
            android:text="OK!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ok" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintEnd_toEndOf="@+id/edit_Y_or_N"
            android:layout_marginEnd="108dp" android:layout_marginRight="108dp"/>
</android.support.constraint.ConstraintLayout>